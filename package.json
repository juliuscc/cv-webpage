{
	"name": "cv-webpage",
	"scripts": {
		"start": "next",
		"build": "next build && next export",
		"export": "next export"
	},
	"dependencies": {
		"next": "^7.0.2",
		"react": "^16.8.1",
		"react-dom": "^16.8.1",
		"styled-components": "^4.1.3"
	},
	"devDependencies": {
		"husky": "^1.3.1",
		"lint-staged": "^8.1.3",
		"prettier": "^1.16.4"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
